<h2>New Recipe</h2>

<%= form_for [@user, @recipe] do |f| %>

  <% if @errors %>
    <div class="alert alert-danger">
      <ul>
        <% @errors.each do |error| %>
          <li><%= error %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :name, "Recipe Name" %><br>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.label :difficulty_level %><br>
    <%= f.collection_select :difficulty_level, Recipe::DIFFICULTY, :to_s, :to_s %>
  </p>

  <p>
    <%= f.label :prep_time_hours %><br>
    <%= f.number_field :prep_time_hours, min:"0" %><br>
    <%= f.label :prep_time_min %><br>
    <%= f.number_field :prep_time_min, min:"0"%>
  </p>

  <p>
    <%= f.label :category_id, "Category" %><br>
    <%= f.select :category_id, @categories.map{|c| [c.name, c.id]} =%>
  </p>

  <div id="ingredient_list">
    <%= link_to "Add Ingredient", new_ingredient_url, id: "new_link", remote: true %>
  </div>

  <p>
    <%= f.label :directions %><br>
    <%= f.text_area :directions %>
  </p>


  <p>
    <%= f.label :creator %><br>
    <%= f.text_field :creator %>
  </p>

  <p>
    <%= f.label :servings %><br>
    <%= f.number_field :servings, min:"0" %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
