<h2>New Recipe</h2>

<%= form_for @recipe do |f| %>

  <% if @errors %>
    <div class="alert alert-danger">
      <ul>
        <% @errors.each do |error| %>
          <li><%= error %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :difficulty_level %><br>
    <%= f.collection_select :difficulty_level, Recipe::DIFFICULTY, :to_s, :to_s %>
  </p>

  <p>
    <%= f.label :prep_time_ %><br>
    <%= f.number_field :prep_time %><br>
    <%= f.label :prep_time_unit %><br>
    <%= f.collection_select :prep_time_unit, Recipe::TIME, :to_s, :to_s %>
  </p>

  <p>
    <%= f.label :category %><br>
    <%= f.collection_select :category, ['Appetizers', 'Soups and Salads'], :to_s, :to_s %>
  </p>

rails
  <p>
    <%= f.label :directions %><br>
    <%= f.text_area :directions %>
  </p>

  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.label :creator %><br>
    <%= f.text_field :creator %>
  </p>

  <p>
    <%= f.label :servings %><br>
    <%= f.text_field :servings %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
