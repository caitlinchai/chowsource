<%= form_for [@recipe] do |f| %>

  <% if @errors %>
    <%= render 'shared/error_messages', object: f.object %>
  <% end %>

  <p>
    <%= f.label :name, "Recipe Name" %><br>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.label :difficulty_level %><br>
    <%= f.collection_select :difficulty_level, Recipe::DIFFICULTY, :to_s, :to_s %>
  </p>

  <p>
    <%= f.label :prep_time_hours %><br>
    <%= f.number_field :prep_time_hours, min:"0" %><br>
    <%= f.label :prep_time_min %><br>
    <%= f.number_field :prep_time_min, min:"0", max:"59"%>
  </p>

  <p>
    <%= f.label :category_id, "Category" %><br>
    <%= f.select :category_id, Category.all.map{|c| [c.name, c.id]} =%>
  </p>

  <p>
    <%= f.label :directions %><br>
    <%= f.text_area :directions %>
  </p>


  <p>
    <%= f.label :creator %><br>
    <%= f.text_field :creator %>
  </p>

  <p>
    <%= f.label :servings %><br>
    <%= f.number_field :servings, min:"0" %>
  </p>

  <p>
    <%= f.label :image %><br>
    <%= f.file_field :image %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
