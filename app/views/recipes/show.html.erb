<div class="recipe_show">
  <%if flash[:notice]%>
    <div class="notice"><%=flash[:notice]%></div>
  <%end%>

  <h1 class="recipe_name"><%=@recipe.name %></h1>

  <div class="stars">
  <% if @current_rating %>
    <% @current_rating.times do |star_value| %>
      <%= image_tag("hover_star.png") %>
    <% end %>
    <% (5 - @current_rating).times do |star_value| %>
      <%= image_tag("star.png") %>
    <% end %>
    <p>Thanks for voting!</p>
  <% else %>
      <%= link_to image_tag("star.png", onmouseover: "this.src='#{asset_path('hover_star.png')}'", onmouseout: "this.src='#{asset_path('star.png')}'"),recipe_ratings_path(@recipe) + "?value=#{1}", method: :create %>
      <%= link_to image_tag("star.png", onmouseover: "this.src='#{asset_path('hover_star.png')}'", onmouseout: "this.src='#{asset_path('star.png')}'"),recipe_ratings_path(@recipe) + "?value=#{2}", method: :create %>
      <%= link_to image_tag("star.png", onmouseover: "this.src='#{asset_path('hover_star.png')}'", onmouseout: "this.src='#{asset_path('star.png')}'"),recipe_ratings_path(@recipe) + "?value=#{3}", method: :create %>
      <%= link_to image_tag("star.png", onmouseover: "this.src='#{asset_path('hover_star.png')}'", onmouseout: "this.src='#{asset_path('star.png')}'"),recipe_ratings_path(@recipe) + "?value=#{4}", method: :create %>
      <%= link_to image_tag("star.png", onmouseover: "this.src='#{asset_path('hover_star.png')}'", onmouseout: "this.src='#{asset_path('star.png')}'"),recipe_ratings_path(@recipe) + "?value=#{5}", method: :create %>
  <% end %>
  </div>
    <p>Average Rating: <%= @recipe.average_rating %> By <%= @recipe.ratings.count %> Members.</p>
    <% if @recipe.image.present? %>
    <p><%= image_tag(@recipe.image) %></p>
    <% end %>
    <p><%= @recipe.description %></p>
    <div>Author: <%= @recipe.creator %></div>
    <div>Level: <%= @recipe.difficulty_level %></div>
    <div>Preparation Time: <%= @recipe.prep_time_hours%> hr. and <%=@recipe.prep_time_min%> min.</div>
    <div>Serves: <%= @recipe.servings %></div>
    <div><h3>ingredients</h3>
      <% @ingredients.each do |item| %>
      <div>
        <%= item.quantity%>
        <%= item.measurement.name%>
        <%= item.ingredient.name%>
      </div>
      <% end %>
    </div>
    <h3>Directions</h3>
    <div><%= @recipe.directions %></div>
</div>

<% if current_user == @recipe.user %>
  <%=link_to "edit recipe", edit_recipe_path(@recipe)%>
  <%=link_to "delete recipe", @recipe, method: :delete, data: { confirm: "Are you sure you want to delete this recipe?" }%>
<% end%>
