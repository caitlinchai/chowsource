<%if flash[:notice]%>
  <div class="notice"><%=flash[:notice]%></div>
<%end%>

<%=link_to "Edit Profile", edit_user_path%>

<h1><%=@user.name%></h1>
<p><%=@user.location%></p>
<h3>About</h3>
<p><%=@user.about%></p>

<h2>Your Recipes</h2>
<%@recipes.each do |recipe|%>
  <%=link_to recipe.name, recipe%>
  <p>added <%= time_ago_in_words(recipe.created_at) %> ago.</p>
<%end%>
